<?xml version="1.0" encoding="utf-8"?>
<TableRow
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">



    <TextView
        android:id="@+id/upcoming_flight_date"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="match_parent"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/title3_size"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/upcoming_flight_depart"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="match_parent"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/title2_size"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/upcoming_flight_arrival"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="match_parent"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/title2_size"
        android:gravity="center_vertical"/>

    <Button
        android:id="@+id/upcoming_flight_edit"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:text="@string/edit"
        style="@style/invisible_button"/>

</TableRow>