<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.noah.onthefly.fragments.FragmentCargoView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/edit_flight_tab"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/front_cargo"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/title4_size"
            android:layout_margin="@dimen/activity_vertical_margin"/>

        <TextView
            android:id="@+id/front_cargo_display"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/title2_size"
            android:text="Weight: 0 lbs"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/front_cargo_add_btn"
                android:layout_width="@dimen/circle_button_size"
                android:layout_height="@dimen/circle_button_size"
                android:layout_gravity="center"
                android:background="@drawable/circle_add_button"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:text="+"
                android:textSize="@dimen/title_size"/>

            <Button
                android:id="@+id/front_cargo_remove_btn"
                android:layout_width="@dimen/circle_button_size"
                android:layout_height="@dimen/circle_button_size"
                android:layout_gravity="center"
                android:background="@drawable/circle_add_button"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:text="-"
                android:textSize="@dimen/title_size"/>
        </LinearLayout>

        <Button
            android:id="@+id/front_empty_cargo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:text="@string/clear_cargo"
            style="@style/accent_button"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/edit_flight_tab"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rear_cargo"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/title4_size"
            android:layout_margin="@dimen/activity_vertical_margin"/>

        <TextView
            android:id="@+id/rear_cargo_display"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/title2_size"
            android:text="Weight: 0 lbs"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/rear_cargo_add_btn"
                android:layout_width="@dimen/circle_button_size"
                android:layout_height="@dimen/circle_button_size"
                android:layout_gravity="center"
                android:background="@drawable/circle_add_button"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:text="+"
                android:textSize="@dimen/title_size"/>

            <Button
                android:id="@+id/rear_cargo_remove_btn"
                android:layout_width="@dimen/circle_button_size"
                android:layout_height="@dimen/circle_button_size"
                android:layout_gravity="center"
                android:background="@drawable/circle_add_button"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:text="-"
                android:textSize="@dimen/title_size"/>
        </LinearLayout>

        <Button
            android:id="@+id/rear_empty_cargo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:text="@string/clear_cargo"
            style="@style/accent_button"/>

    </LinearLayout>

</LinearLayout>
